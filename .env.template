# ===========================================
# UniPass Environment Configuration Template
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# -----------------
# API Configuration
# -----------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------
# OpenAI Configuration
# -----------------
# Get your API key from: https://platform.openai.com/api-keys
NEXT_PUBLIC_OPENAI_API_KEY=

# Model selection (options: gpt-4-turbo-preview, gpt-3.5-turbo)
# GPT-4 is more capable but more expensive; GPT-3.5 is faster and cheaper
NEXT_PUBLIC_OPENAI_MODEL=gpt-4-turbo-preview

# Maximum tokens per request (controls response length and cost)
NEXT_PUBLIC_OPENAI_MAX_TOKENS=2000

# Temperature (0.0 = focused/deterministic, 1.0 = creative/random)
NEXT_PUBLIC_OPENAI_TEMPERATURE=0.7

# -----------------
# AI Features Toggle
# -----------------
# Enable/disable specific AI features (true/false)
NEXT_PUBLIC_AI_EVENT_DESCRIPTION=true
NEXT_PUBLIC_AI_EMAIL_GENERATOR=true
NEXT_PUBLIC_AI_CERTIFICATE_DESIGNER=true
NEXT_PUBLIC_AI_ATTENDANCE_INSIGHTS=true
NEXT_PUBLIC_AI_RECOMMENDATIONS=true

# -----------------
# AI Rate Limiting
# -----------------
# Maximum AI requests per minute (adjust based on your OpenAI quota)
NEXT_PUBLIC_AI_RATE_LIMIT=10

# -----------------
# AI Response Caching
# -----------------
# Enable caching to reduce API calls and costs
NEXT_PUBLIC_AI_CACHE_ENABLED=true

# Cache time-to-live in seconds (3600 = 1 hour)
NEXT_PUBLIC_AI_CACHE_TTL=3600

# -----------------
# Email Service (Optional)
# -----------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# -----------------
# Database (Backend)
# -----------------
DATABASE_URL=postgresql://user:password@localhost/unipass

# -----------------
# Application Settings
# -----------------
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------
# Development Settings
# -----------------
DEBUG=false
LOG_LEVEL=info

# -----------------
# Production Settings
# -----------------
# Set these in production environment only
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# VERCEL_URL=https://unipass.yourdomain.com
